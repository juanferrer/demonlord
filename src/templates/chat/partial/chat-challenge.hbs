{{!--
  Variables:
    - data
      - challStrength
      - challAgility
      - challIntellect
      - challWill
      - challPerception
      - defenseboonsbanes
--}}

<div class="gmonly">
  {{#each data.challenges as |challenge id|}}
  <div class="challengeaction request-challengeroll">
    <div class="header" data-attribute="{{challenge.attribute}}" data-boba="{{challenge.boonsBanes}}">
      <div class="challenge-img"></div>
      {{#if challenge.name}}
      <div>{{challenge.name}}</div>
      {{else}}
      <div>{{localize "DL.ChallengeRoll"}}: {{localize (concat "DL.Attribute" (capitalize challenge.attribute))}}
        {{#if challenge.boonsBanes}}({{challenge.boonsBanes}}){{/if}}
      </div>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
